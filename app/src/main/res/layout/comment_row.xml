<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:transitionName="@string/activity_image_trans"
    android:id="@+id/main_target"
    android:layout_height="wrap_content">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <View
                android:id="@+id/line"
                android:background="@color/grey_600"
                android:layout_width="match_parent"
                android:layout_height="4dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <in.hoptec.ppower.views.RoundedImageView
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/more"
                    android:id="@+id/opt"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            <com.daniribalbert.customfontlib.views.CustomFontTextView

                android:maxLines="1"

                android:ellipsize="end"
                android:id="@+id/text"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:text="Hi ! this is me"
                android:textColor="@color/black"
                app:font="Avenir-Medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


                <com.daniribalbert.customfontlib.views.CustomFontTextView
                    android:paddingRight="10dp"
                    android:gravity="center_vertical|right"
                    android:layout_weight="0.8"
                    android:id="@+id/time"
                    android:textSize="13sp"
                    android:text="19 July"
                    android:textColor="@color/grey_500"
                    app:font="Avenir-Medium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <com.daniribalbert.customfontlib.views.CustomFontTextView
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="marquee"

                android:id="@+id/text2"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="Hi ! this is me"
                android:textColor="@color/grey_800"
                app:font="avenir-next-regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >



                <ImageView
                    android:visibility="gone"
                    android:padding="8dp"
                    android:layout_weight="0.2"
                    android:src="@drawable/love"
                    android:id="@+id/love"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />



            </LinearLayout>










        </LinearLayout>









    </LinearLayout>










</LinearLayout>